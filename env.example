# Configuration CAMEG-CHAIN - Variables d'environnement
# Copiez ce fichier vers .env et configurez vos valeurs

# ===========================================
# BASE DE DONNÉES
# ===========================================
DB_HOST=localhost
DB_PORT=5432
DB_NAME=CAMEG-CHAIN
DB_USER=postgres
DB_PASSWORD=your_secure_password_here
DATABASE_URL=postgresql://postgres:your_secure_password_here@localhost:5432/CAMEG-CHAIN

# ===========================================
# CACHE REDIS
# ===========================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password_here
REDIS_DB=0

# ===========================================
# SÉCURITÉ
# ===========================================
SECRET_KEY=your_super_secret_key_here_change_in_production
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7
BCRYPT_ROUNDS=12
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION_MINUTES=15

# ===========================================
# API CONFIGURATION
# ===========================================
API_HOST=0.0.0.0
API_PORT=8000
ENVIRONMENT=production
DEBUG=False
FRONTEND_URL=https://cameg-chain.com

# ===========================================
# SERVICE IA
# ===========================================
AI_SERVICE_URL=http://localhost:8001
AI_MODEL_PATH=./ai_service/model/

# ===========================================
# MONITORING ET ERREURS
# ===========================================
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# ===========================================
# BACKUP ET STOCKAGE
# ===========================================
S3_BACKUP_BUCKET=cameg-chain-backups
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1

# ===========================================
# RATE LIMITING
# ===========================================
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# ===========================================
# CORS
# ===========================================
ALLOWED_ORIGINS=https://cameg-chain.com,https://www.cameg-chain.com

# ===========================================
# MONITORING
# ===========================================
GRAFANA_PASSWORD=your_grafana_admin_password

# ===========================================
# DOCKER
# ===========================================
DOCKER_USERNAME=your_docker_username
DOCKER_PASSWORD=your_docker_password

# ===========================================
# NOTIFICATIONS
# ===========================================
SLACK_WEBHOOK=https://hooks.slack.com/services/your/slack/webhook

# ===========================================
# EMAIL (pour les notifications)
# ===========================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password
SMTP_FROM_EMAIL=noreply@cameg-chain.com

# ===========================================
# SSL/TLS
# ===========================================
SSL_CERT_PATH=/etc/nginx/ssl/cameg-chain.crt
SSL_KEY_PATH=/etc/nginx/ssl/cameg-chain.key

# ===========================================
# LOGGING
# ===========================================
LOG_LEVEL=INFO
LOG_FILE_PATH=./logs/app.log

# ===========================================
# DÉVELOPPEMENT (à désactiver en production)
# ===========================================
# DEBUG=True
# ENVIRONMENT=development
# SKIP_TESTS=false